@model IEnumerable<MovieDbLite.MVC.Models.AwardWinner>

@{
    ViewData["Title"] = "Index";
}

<h1>Award Winners</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Award)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Award.AwardShow.ShowName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwardShowInstance.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmMember.PreferredFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Award.AwardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Award.AwardShow.ShowName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardShowInstance.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmMember.PreferredFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.AwardShowInstanceId, 
                    item.AwardId, item.FilmMemberId }) |
                @Html.ActionLink("Details", "Details", new { item.AwardShowInstanceId, 
                    item.AwardId, item.FilmMemberId }) |
                @Html.ActionLink("Delete", "Delete", new { item.AwardShowInstanceId, 
                    item.AwardId, item.FilmMemberId })
            </td>
        </tr>
}
    </tbody>
</table>
